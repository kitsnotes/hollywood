# Contributor: The Cat <cat@originull.org>
# Maintainer: The Cat <cat@originull.org>
pkgname=hollywood-eglfs
pkgver=1.0
pkgrel=1
pkgdesc="Hollywood Qt6 EGLFS plugin"
url="https://originull.org"
arch="all"
options="!check" # no test suite
license="LGPL2"
depends="qt6-qtbase qt6-qtwayland hollywood-qt6-libs"
makedepends="qt6-qtwayland-dev hollywood-qt6-libs-dev"
source="https://depot.originull.org/upstream/hollywood-desktop-$pkgver.tar.gz"
builddir="$srcdir/hollywood-desktop-$pkgver"

build() {
	cd $builddir/eglfs
	/usr/lib/qt6/bin/qmake
	make
}

package() {
	cd $builddir/eglfs
	make INSTALL_ROOT="$pkgdir" install
}

sha512sums="
