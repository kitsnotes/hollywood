# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt6-polkit-qt-1
pkgver=0.114.0
pkgrel=1
pkgdesc="Qt6 wrapper around polkit-1 client libraries"
# s390x and riscv64 blocked by polkit-elogind
arch="all !s390x !riscv64"
url="https://www.kde.org"
license="LGPL-2.1-only"
depends_dev="polkit-dev"
makedepends="$depends_dev
	cmake
	qt6-qtbase-dev
	samurai
	"
source="http://depot.originull.org//polkit-qt-1-git.tar.gz"
subpackages="$pkgname-dev"
builddir="$srcdir/polkit-qt-1"

build() {
	cmake -B build -G Ninja \
		-DQT_MAJOR_VERSION=6 \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2f50f25a8934e1d11d011bf7fe015993c9745b76887b82b4f74bfb03dfaa307fc96a1d1fe2ff4293e8da9bfa63a766267bbcefbe44718c5b200ca9bbcf06877d  polkit-qt-1-git.tar.gz
"
