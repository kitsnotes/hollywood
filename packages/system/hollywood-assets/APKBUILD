# Contributor:
# Maintainer:
pkgname=hollywood-assets
pkgver=1.0
pkgrel=0
pkgdesc="Assets (wallpapers, sounds, etc) for the Hollywood Desktop"
url="https://originull.org/hollywood"
arch="all"
license="CC0/GPL"
depends=""
makedepends=""
checkdepends=""
install=""
source="https://depot.originull.org/upstream/$pkgname-$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"
options="!check" # no test suite

build() {
	return 0
}


package() {
	mkdir -p "$pkgdir"/usr/share/
	cp -ra "$builddir"/* "$pkgdir"/usr/share/
	find "$pkgdir" -type d -exec chmod 755 {} \;
	find "$pkgdir" -type f -exec chmod 644 {} \;
}

sha512sums="
