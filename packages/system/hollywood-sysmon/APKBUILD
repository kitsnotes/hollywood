# Contributor: The Cat <cat@originull.org>
# Maintainer: The Cat <cat@originull.org>
pkgname=hollywood-sysmon
pkgver=1.0
pkgrel=25
pkgdesc="Hollywood System Monitor"
url="https://originull.org"
arch="all"
options="!check" # no test suite
license="GPL2"
depends="qt6-qtbase hollywood-shell hollywood-qt6-libs qt6-qtcharts libapk-qt"
makedepends="qt6-qtwayland-dev qt6-qtcharts-dev mdnsresponder-dev libapk-qt-dev"
source="https://depot.originull.org/upstream/hollywood-desktop-$pkgver.tar.gz"
builddir="$srcdir/hollywood-desktop-$pkgver"

build() {
	cd $builddir/sysmon
	/usr/lib/qt6/bin/qmake
	make
}

package() {
	cd $builddir/sysmon
	make INSTALL_ROOT="$pkgdir" install
}

sha512sums="
