# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=zlib
pkgver=1.2.12
pkgrel=5
pkgdesc="A compression/decompression Library"
arch="all"
license="Zlib"
url="https://zlib.net/"
# removing -dev was a stupid hack because libz.so was being moved to -dev
subpackages="$pkgname-static $pkgname-doc"
source="https://zlib.net/zlib-$pkgver.tar.gz
	Fix-CC-logic-in-configure.patch
	configure-Pass-LDFLAGS-to-link-tests.patch
	crc32.patch
	"
# secfixes:
#   1.2.11-r4:
#     - CVE-2018-25032

build() {
	# we trade size for a little more speed.
	export CFLAGS="$CFLAGS -O2"
	CHOST="$CHOST" ./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--shared
	make
}

check() {
	make check
}

package() {
	make install \
		pkgconfigdir="/usr/lib/pkgconfig" \
		DESTDIR="$pkgdir"
}

