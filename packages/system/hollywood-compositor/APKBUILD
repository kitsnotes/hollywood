# Contributor: The Cat <cat@originull.org>
# Maintainer: The Cat <cat@originull.org>
pkgname=hollywood-compositor
pkgver=1.0
pkgrel=49
pkgdesc="Hollywood Window Compositor"
url="https://originull.org"
arch="all"
options="!check" # no test suite
license="GPL3"
depends="qt6-qtwayland libinput hollywood-qt6-libs eudev elogind hollywood-eglfs"
makedepends="qt6-qtwayland-dev eudev-dev elogind-dev"
source="https://depot.originull.org/upstream/hollywood-desktop-$pkgver.tar.gz"
builddir="$srcdir/hollywood-desktop-$pkgver"

build() {
	cd $builddir/compositor
	/usr/lib/qt6/bin/qmake
	make
	:
}

package() {
	cd $builddir/compositor
	make INSTALL_ROOT="$pkgdir" install
}

sha512sums="
